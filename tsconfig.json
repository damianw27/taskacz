{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["./*"],
      "@ui/*": ["../ui/*"],
      "@type/*": ["./types/*"]
    }
  }
}
